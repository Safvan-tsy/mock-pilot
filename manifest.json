{
  "manifest_version": 3,
  "name": "MockPilot",
  "version": "0.0.1",
  "description": "AI-powered form auto-filler for developers and testers",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}